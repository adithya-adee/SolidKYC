# Backend Environment Configuration - EXAMPLE
# Copy this file to .env and update with your values

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
PROGRAM_ID=25sFtHdxx56aoPKM7sr8nq5P6QZnB1BeLqXq2S8fng8c

# Server Configuration
PORT=3000

# Frontend URLs for CORS
FRONTEND_URL=https://your-solidkyc-frontend.vercel.app
SIMDEX_URL=https://your-simdex.vercel.app

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-solidkyc-frontend.vercel.app,https://your-simdex.vercel.app

# Authority/Issuer Configuration
# Generate your own keypair for production using: solana-keygen new
AUTHORITY_PRIVATE_KEY=[YOUR_PRIVATE_KEY_ARRAY_HERE]

# Issuer Name (must match the initialized issuer on-chain)
ISSUER_NAME=Your-Issuer-Name

# ZK Private Key for EdDSA signing (BabyJubJub)
# Generate a secure random value for production
ZK_PRIVATE_KEY=YOUR_SECURE_RANDOM_VALUE_HERE
